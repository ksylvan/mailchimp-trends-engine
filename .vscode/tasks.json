	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Bootstrap the project",
			"command": "make bootstrap",
			"problemMatcher": [],
			"detail": "Bootstrap the project using make",
			"presentation": {
				"reveal": "always",
				"echo": true,
				"focus": true,
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "shell",
			"label": "Run tests",
			"command": "make test",
			"problemMatcher": [],
			"detail": "Run tests using make",
			"presentation": {
				"reveal": "always",
				"echo": true,
				"focus": true,
				"panel": "new"
			}
		},
		{
			"type": "shell",
			"label": "Run tests with coverage",
			"command": "make test-coverage",
			"problemMatcher": ["$go"],
			"detail": "Run tests with coverage using make",
			"presentation": {
				"reveal": "always",
				"echo": true,
				"focus": true,
				"panel": "new"
			}
		}
	]
